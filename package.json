{
  "version": "0.0.1",
  "name": "@backium/use-instance",
  "author": "Dany Boza <db@backium.co> (https://github.com/xorb)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/backium/use-instance.git"
  },
  "homepage": "https://github.com/backium/use-instance",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/use-instance.esm.js",
  "size-limit": [
    {
      "path": "dist/use-instance.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/use-instance.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.1",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "husky": "^5.1.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "size-limit": "^4.10.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  },
  "license": "MIT"
}
